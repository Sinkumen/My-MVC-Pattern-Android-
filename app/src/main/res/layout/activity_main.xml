<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/Root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cnkua.discoverethiopia.Controllers.MainActivity"
    android:background="@drawable/image">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D4A045F" />

    <TextView
        android:id="@+id/grad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="199dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="138dp"
        android:background="@drawable/text" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="135dp"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_button"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="RedirectToAttraction"
            android:text="@string/attractions"
            android:textColor="#4A045F" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/my_button_2"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="RedirectToAgent"
        android:text="@string/agents"
        android:textColor="#fff" />


</RelativeLayout>
